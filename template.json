{
  "variables": {
    "atlas_username": "uchida",
    "atlas_name": "centos",
    "version": "0.0.0",

    "iso_url": "http://mirrors.kernel.org/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1503.iso",
    "iso_checksum": "498bb78789ddc7973fe14358822eb1b48521bbaca91c17bd132c7f8c903d79b3",
    "iso_checksum_type": "sha256",
    "boot_wait": "50s",
    "disk_size": "8192",
    "http_directory": "http",
    "ssh_username": "root",
    "ssh_password": "packer",
    "ssh_wait_timeout": "1800s",
    "shutdown_command": "shutdown -P now",
    "headless": "true"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",

      "vm_name": "{{user `atlas_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": "<esc><wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>",
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "centos-64",

      "vm_name": "{{user `atlas_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": "<esc><wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>",
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "qemu",

      "vm_name": "{{user `atlas_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": "<esc><wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>",
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/vagrant.sh"
    },
    {
      "type": "shell",
      "script": "scripts/vmguest.sh",
      "only": ["virtualbox-iso", "vmware-iso"]
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile.template",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "only": ["vmware-iso"],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "vmware_desktop",
          "version": "{{user `version`}}"
        }
      },
      {
        "type": "atlas",
        "only": ["qemu"],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "libvirt",
          "version": "{{user `version`}}"
        }
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `version`}}"
        }
      }
    ]
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  }
}
